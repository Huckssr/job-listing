
<div class="text-center">
  <%= link_to("发布职位", new_admin_job_path, :class => "btn btn-default" ) %>
</div>
<div style="margin-top: 10px;">&nbsp
</div>
<div class="section">
  <div class="des">
<div style="margin-top: 20px;">&nbsp
</div>
<table class="table table-boldered">
  <thead>
    <tr>
      <td>
      职位名称
      </td>
      <td>
      收到简历
      </td>
      <td>
      薪资范围
      </td>
      <td>
      管理选项
      </td>
      <td>
      发布时间
      </td>
    </tr>
    </thead>
  <% @jobs.each do |job| %>
    <tr>
      <td>
      <%= render_job_status(job) %>
      <%= link_to(job.title, admin_job_path(job)) %>
      </td>
      <td> <%= link_to(job.resumes.count, admin_job_resumes_path(job)) %> </td>
      <td> ¥	<%= job.wage_lower_bound%> - <%= job.wage_upper_bound%></td>

      <td>
        <%= link_to("编辑", edit_admin_job_path(job)) %>
        |
        <%= link_to("删除", admin_job_path(job), :method => :delete, :data => { :confirm => "删除将无法恢复！！！" }) %>
        |
        <% if job.is_hidden %>
        <%= link_to("显示", publish_admin_job_path(job) , :method => :post, :class => "btn btn-xs btn-default") %>
        <% else %>
        <%= link_to("隐藏", hide_admin_job_path(job), :method => :post,  :class => "btn btn-xs btn-default") %>
        <% end %>
      </td>
      <td>
        <%= job.created_at %>
      </td>
    </tr>
    <% end %>

</table>
<div style="margin-top: 20px;">&nbsp
</div>
</div>
</div>
